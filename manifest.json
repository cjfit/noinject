{
  "manifest_version": 3,
  "name": "Ward",
  "version": "1.0.0",
  "description": "AI-powered protection against scams, phishing, and online threats. Offline and private.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-safe-16.png",
      "32": "icons/icon-safe-32.png",
      "48": "icons/icon-safe-48.png",
      "128": "icons/icon-safe-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-safe-16.png",
    "32": "icons/icon-safe-32.png",
    "48": "icons/icon-safe-48.png",
    "128": "icons/icon-safe-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon-danger-16.png", "icons/icon-danger-32.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
